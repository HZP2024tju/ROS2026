<robot name ="mycar">
    <link name  = "base_link">
        <visual>
            <geometry>
                <box size="1 0.9 0.5"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="base_color">
                <color rgba = "1 0 0 1"/>
            </material>
        </visual>   
    </link>

    <link name  = "camera">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.3"/>
            </geometry>
            <origin xyz = "0.5 0 0.125" rpy = "0 0 0"/>
            <material name="camera_color">
                <color rgba = "0 1 0 1"/>
            </material>
        </visual>   
    </link>

    <joint name="camerabase" type = "continuous">
        <parent link="base_link"/>
        <child link = "camera"/>
        <origin xyz = "0 0 0.25" rpy = "0 0 0"/>
        <axis xyz="0 0 0.25" />
    </joint>
</robot>